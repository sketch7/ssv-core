{
  "name": "@ssv/core",
  "version": "0.4.0",
  "description": "ssv core components, utilities and services",
  "keywords": [
    "sketch7",
    "core",
    "utils"
  ],
  "scripts": {
    "start": "gulp watch",
    "test": "jest",
    "tdd": "jest --watch",
    "test-debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --env jest-environment-node-debug",
    "test-devt": "devtool ./node_modules/jest/bin/jest.js --runInBand --env jest-environment-node-debug",
    "watch": "gulp watch",
    "lint": "gulp lint",
    "build": "gulp build",
    "bundle": "gulp bundle:ts",
    "prepare-release": "gulp prepare-release"
  },
  "author": "Stephen Lautier <stephen.lautier@outlook.com>, Clayton Lautier <clayton.lautier@outlook.com>",
  "license": "MIT",
  "main": "dist/bundles/ssv-core.umd.js",
  "module": "dist/es2015/index.js",
  "typings": "dist/es2015/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sketch7/ssv-core"
  },
  "devDependencies": {
    "@ssv/tools": "^0.7.0",
    "@speedy/build-tools": "^0.8.1",
    "@types/jest": "^23.3.7",
    "@types/lodash": "^4.14.117",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-bump": "^3.1.1",
    "gulp-conventional-changelog": "^2.0.3",
    "gulp-git": "^2.8.0",
    "gulp-plumber": "^1.2.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.8",
    "jest": "^23.6.0",
    "jest-environment-node-debug": "^2.0.0",
    "lodash": "^4.17.11",
    "require-dir": "^1.1.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3",
    "yargs": "^12.0.2"
  },
  "dependencies": {},
  "peerDependencies": {
    "lodash": "^4.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
